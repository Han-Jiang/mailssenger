<?xml version="1.0" encoding="utf-8"?>
<selector 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="true" android:state_pressed="false" > 
	    <layer-list>
	        <item  >
				<shape>
				    <solid android:color="@color/app_main_color_shadow"/>
					<corners 
						android:radius="3dp" /> 
				</shape>
			</item>
	        <item  android:bottom="4px">
				<shape>
				    <solid android:color="@color/app_main_color"/>
					<corners 
						android:radius="3dp" /> 
					<padding 
						android:left="12dp"
						android:top="12dp"
						android:right="12dp"
						android:bottom="12dp" />
				</shape>
			</item>
		</layer-list> 
	</item>
	<item android:state_enabled="true" android:state_pressed="true" > 
		<layer-list>
	        <item  android:top="1px">
				<shape>
				    <solid android:color="@color/app_main_color_pressed"/>
					<corners 
						android:radius="3dp" /> 
					<padding 
						android:left="12dp"
						android:top="12dp"
						android:right="12dp"
						android:bottom="12dp" />
				</shape>
			</item>
		</layer-list> 
	</item>
	<item android:state_enabled="false"> 
		<layer-list>
	        <item  >
				<shape>
				    <solid android:color="@color/app_main_color_shadow_disabled"/>
					<corners 
						android:radius="3dp" />
				</shape>
			</item>
	        <item  android:bottom="4px">
				<shape>
				    <solid android:color="@color/app_main_color_disabled"/>
					<corners 
						android:radius="3dp" /> 
					<padding 
						android:left="12dp"
						android:top="12dp"
						android:right="12dp"
						android:bottom="12dp" />
				</shape>
			</item>
		</layer-list> 
	</item>
</selector>