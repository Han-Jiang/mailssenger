<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_listview_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
   
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" >

        <ImageView
            android:id="@+id/main_listview_feature_img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_margin="6dip"
            android:background="@drawable/main_listview_feature_img" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/main_listview_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/main_listview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dip"
                android:text="Re:jinan university visit"
                android:textColor="#007abb"
                android:textSize="18sp"
                android:maxLength="20" />

            <TextView
                android:id="@+id/main_listview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:text="21:00"
                android:textColor="#cc6a6a"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/main_listview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_listview_name_time"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="6dip"
            android:gravity="left"
            android:text="我勒个去，这是哪里？sdafjsdkaf jadsljf lkdsjfksa fjlksdajklfjasdkljfkldsajklfjsadlk;jfkldsjakl;fjdaskljfkljadslkf"
            android:textColor="#b3b3b3"
            android:textSize="16sp"
            android:maxLength="50" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="#8cd2f4" >

        <ImageView
            android:id="@+id/main_listview_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/main_listview_star_img" />

    </LinearLayout>
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.8dip"
        android:background="#eaeaea" >
    </LinearLayout>
    

    
    

</LinearLayout>