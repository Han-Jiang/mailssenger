<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


<ScrollView 
    android:id="@+id/classtable_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="0dp"
    android:background="#e7edf0"
    android:fadingEdge="none"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/info_content_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#77000000"
                android:padding="10dp"
                android:text="电子系报告堪称年度最多"
                android:textColor="#fff"
                android:textSize="17sp" />
        </LinearLayout>


    <RelativeLayout
        android:id="@+id/info_content_time_and_origin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/info_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="7月17日  16:10"
            android:textColor="#a1a1a1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info_content_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/info_content_time"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="来自 @暨南FM"
            android:textColor="#a1a1a1"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/info_content_like"
            android:contentDescription="like you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/info_content_like_btn"
            android:src="@drawable/mail_heart_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_content_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp" >

        <TextView
            android:id="@+id/info_content_main_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#ffffffff"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="年近40岁的田先生，是北京一家杂志社的副社长。7月初，他带
					着女儿在自家附近的前海摆地摊。7月25号晚， 田先生摊前来了
					三辆车，车上人员让田先生收摊，否则自己动手清理，田先生答
					应“马上就收”。"
            android:textColor="#585858"
            android:textSize="15sp"
             android:visibility="visible" />
        
        <WebView 
             android:id="@+id/info_content_web_view"
            android:layout_height="fill_parent" 
            android:layout_width="fill_parent" 
            android:visibility="gone" /> 
            
    </RelativeLayout>

    </LinearLayout>

</ScrollView>
</LinearLayout>

